@model IEnumerable<AAMS.Models.AttendanceData>

@{
    ViewBag.Title = "EditAttendance";
    Layout = "~/Views/Shared/_LecturerLayout.cshtml";
}

<h2 class="text-center text-muted">EDIT</h2>
<div class="text-left">
    <button class="btn btn-default">
        @Html.ActionLink("<", "ViewAttendances", "Lecturer")
    </button>
</div>


<hr />



<table class="table table-hover text-center  table-sm">
    <tr class="thead-light">
        <th>
            @Html.DisplayNameFor(model => model.AttendanceSheets.Students.StudentCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttendanceSheets.Students.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttendanceSheets.Students.FatherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttendanceSheets.Students.GrandFatherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttendanceSheets.Students.Batch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceSheets.Students.StudentCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceSheets.Students.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceSheets.Students.FatherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceSheets.Students.GrandFatherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceSheets.Students.Batch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <a href="@Url.Action("EditAttendanceData", "Lecturer",new { id = item.AttendanceDataID })" class="">
                    <i class="far fa-edit"></i>
                    <span>
                        <strong>Edit</strong>
                    </span>
                </a>

                |
                <a href="@Url.Action("DeleteAttendance", "Lecturer",new { id = item.AttendanceDataID })" class="">
                    <i class="far fa-trash-alt"></i>
                    <span>
                        <strong>Delete</strong>
                    </span>
                </a>

            </td>
        </tr>
    }

</table>
