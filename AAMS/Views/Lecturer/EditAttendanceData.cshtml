@model AAMS.Models.AttendanceData

@{
    ViewBag.Title = "EditAttendanceData";
    Layout = "~/Views/Shared/_LecturerLayout.cshtml";
}

<h2 class="text-center text-muted">EDIT ATTENDANCE</h2>

<div class="text-left">
    <button class="btn btn-default">
        @Html.ActionLink("<", "Index", "Lecturer")
    </button>
</div>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AttendanceDataID)
    @{TempData["AttendanceDataID"] = ViewBag.AttendanceDataID;
    }

    <div class="form-group">
        @Html.Label("STUDENT CODE", htmlAttributes: new { @class = "control-label col-md-2 text-muted" })
        <div class="col-md-10">
            @ViewBag.StudentCode
            @*@Html.EditorFor(model => model.AttendanceSheetId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AttendanceSheetId, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.Label("FIRST NAME", htmlAttributes: new { @class = "control-label col-md-2 text-muted" })
        <div class="col-md-10">
            @ViewBag.FirstName
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.Label("SECOND NAME", htmlAttributes: new { @class = "control-label col-md-2 text-muted" })
        <div class="col-md-10">
            @ViewBag.FatherName
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.Label("LAST NAME", htmlAttributes: new { @class = "control-label col-md-2 text-muted" })
        <div class="col-md-10">
            @ViewBag.GrandFatherName
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.Label("BATCH", htmlAttributes: new { @class = "control-label col-md-2 text-muted" })
        <div class="col-md-10">
            @ViewBag.Batch
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })*@
            @ViewBag.Date
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Data, new List<SelectListItem>
                 { new SelectListItem{Text = "Present", Value="Present", Selected=true},
                 new SelectListItem{Text = "Absent", Value="Absent" },
                 new SelectListItem{Text = "Permission", Value="Permission" }
                 }, new { @class = "btn btn-secondary dropdown-toggle" }
)
            @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center">
        <div class="">
            <input type="submit" value="Save" class="btn btn-info" />
        </div>
    </div>
</div>
}
