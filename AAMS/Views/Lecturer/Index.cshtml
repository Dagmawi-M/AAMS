@using AAMS.Models;


@model IEnumerable<AAMS.Models.AttendanceSheet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LecturerLayout.cshtml";
}




<h3 class="text-center text-muted">Dashboard</h3>

@helper fun(string Code, string SheetName, string Section)
{
    <hr />
    <div class="card-deck">
        <div class="card text-white bg-secondary mb-1">
            <div class="card-body">
                <h4 class="card-title">  @Code</h4>
                <h9 class="card-text"> @SheetName</h9>
            </div>
            <div class="card-footer">
                <p class=" text-">Section : @Section</p>
            </div>
        </div>
    </div>
}


@foreach (var item in Model)
{
    @fun(item.Courses.CourseCode, item.Courses.CourseName, item.Section);
}
